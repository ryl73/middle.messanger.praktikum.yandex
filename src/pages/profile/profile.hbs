<div class="page profile-page">
    {{{ Header }}}
    <div class="container flex">
        <aside class="profile-page__back-section">
            <a class="link" data-page="main">
				{{{ ButtonBack }}}
            </a>
        </aside>
        <main class="container profile-page__main-section">
            <section class="profile">
                <div class="profile__header">
                    {{{ AvatarComponent }}}
                    <h2 class="fs-h2">{{displayName}}</h2>
                </div>
                <div class="profile__content__container">
                    <div class="profile__content info active">
                        <div class="profile__content__fields">
                            {{{ InfoFieldEmail }}}
                            {{{ InfoFieldLogin }}}
                            {{{ InfoFieldFirstName }}}
                            {{{ InfoFieldSecondName }}}
                            {{{ InfoFieldDisplayName }}}
                            {{{ InfoFieldPhone }}}
                        </div>
                        <div class="profile__controls">
                            <div class="profile__controls__control">
                                {{{ LinkChangeInfo }}}
                            </div>
                            <div class="profile__controls__control">
								{{{ LinkChangePassword }}}
                            </div>
                            <div class="profile__controls__control">
								{{{ LinkLogout }}}
                            </div>
                        </div>
                    </div>

                    <form class="profile__content edit">
                        <div class="profile__content__fields inputs">
							{{{ EmailInput }}}
							{{{ LoginInput }}}
							{{{ FirstNameInput }}}
							{{{ SecondNameInput }}}
							{{{ DisplayNameInput }}}
							{{{ PhoneInput }}}
                        </div>
                        <div class="profile__controls gapped">
							{{{ ButtonSaveInfo }}}
							{{{ LinkCancelInfo }}}
                        </div>
                    </form>

                    <form class="profile__content edit-password">
                        <div class="profile__content__fields inputs">
							{{{ OldPasswordInput }}}
							{{{ NewPasswordInput }}}
							{{{ NewPasswordRepeatInput }}}
                        </div>
                        <div class="profile__controls gapped">
                            {{{ ButtonSavePassword }}}
							{{{ LinkCancelPassword }}}
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>
</div>
